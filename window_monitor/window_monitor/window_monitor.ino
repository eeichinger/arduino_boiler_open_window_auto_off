#include <SPI.h>
#include <nRF24L01.h>
#include <RF24.h>

// MONITOR/RIGHT

RF24 radio(6, 7); // CE, CSN

const byte address[6] = "00001";

void setup() {
  radio.begin();
  radio.openWritingPipe(address);
  radio.setPALevel(RF24_PA_MIN);
  radio.stopListening();
}
void loop() {
  const char text[] = "OPEN";
  radio.write(&text, sizeof(text));
  delay(1000);
  const char text[] = "CLOSED";
  radio.write(&text, sizeof(text));
  delay(1000);
}
